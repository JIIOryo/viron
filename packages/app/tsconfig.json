{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNEXT",
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "$src/*": ["src/*"],
      "$components/*": ["src/components/*"],
      "$constants/*": ["src/constants/*"],
      "$errors/*": ["src/errors/*"],
      "$hooks/*": ["src/hooks/*"],
      "$i18n/*": ["src/i18n/*"],
      "$layouts/*": ["src/layouts/*"],
      "$oas/*": ["src/oas/*"],
      "$storage/*": ["src/storage/*"],
      "$store/*": ["src/store/*"],
      "$styles/*": ["src/styles/*"],
      "$types/*": ["src/types/*"],
      "$utils/*": ["src/utils/*"],
      "$wrappers/*": ["src/wrappers/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
