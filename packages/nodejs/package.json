{
  "name": "@viron/nodejs",
  "version": "0.0.1",
  "scripts": {
    "build": "npm run clean && npm run format && npm run lint && tsc --project tsconfig.json",
    "clean": "rm -rf dist && rm -f tsconfig.tsbuildinfo",
    "coverage": "jest --coverage",
    "format": "npm run format:prettier",
    "format:prettier": "prettier --write \"**/*.ts\"",
    "lint": "npm run lint:ts",
    "lint:ts": "eslint \"**/*.ts\"",
    "lint:ts:fix": "eslint --fix \"**/*.ts\"",
    "pre-commit": "lint-staged",
    "pre-push": "npm run test",
    "test": "echo TEST",
    "test:watch": "jest --watch"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "mongoose": "^5.11.13"
  },
  "devDependencies": {
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.17.0",
    "eslint-config-cam-recommended": "^0.0.4",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=15.0.0",
    "npm": ">=7.0.0"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write",
      "eslint"
    ]
  }
}
