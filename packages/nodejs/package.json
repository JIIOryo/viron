{
  "name": "@viron/lib",
  "version": "0.0.1",
  "scripts": {
    "build": "npm run clean && npm run format && npm run lint && tsc --project tsconfig.json && cp -fr src/openapi dist/",
    "clean": "rm -rf dist && rm -f tsconfig.tsbuildinfo",
    "coverage": "jest --coverage",
    "format": "npm run format:prettier",
    "format:prettier": "prettier --write \"**/*.ts\" --loglevel warn",
    "lint": "npm run lint:ts",
    "lint:ts": "eslint \"**/*.ts\"",
    "lint:ts:fix": "eslint --fix \"**/*.ts\"",
    "pre-commit": "lint-staged",
    "pre-push": "npm run test",
    "test": "jest -c ./jest.config.ts",
    "test:watch": "jest --watch"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "dependencies": {
    "casbin": "^5.6.1",
    "casbin-mongoose-adapter": "^3.0.1",
    "casbin-sequelize-adapter": "^2.2.0",
    "debug": "^4.3.1",
    "js-yaml": "^4.0.0",
    "json-schema-ref-parser": "^9.0.7",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.6"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/js-yaml": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.17.0",
    "eslint-config-cam-recommended": "^0.0.4",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "mongodb-memory-server": "^6.9.3",
    "openapi3-ts": "2.0.1",
    "prettier": "^2.2.1",
    "sinon": "^10.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write --loglevel warn",
      "eslint"
    ]
  }
}
